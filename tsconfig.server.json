{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2020"
        ], // ⬅️ removed "DOM"
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "skipLibCheck": true, // ⬅️ ignore type errors from dependencies
        "noEmitOnError": false // ⬅️ still emit JS even if type errors remain
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "src"
    ] // ⬅️ exclude React frontend code
}